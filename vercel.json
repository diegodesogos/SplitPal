{
  "buildCommand": "npm run build",
  "builds": [
    {
      "src": "dist/server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "dist/client/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "dist/server/index.js" },

    {
      "src": "/(.*)\\.(js|css|png|jpg|jpeg|gif|svg|ico|webp|woff2?|ttf|eot|json)$",
      "dest": "dist/client/$1.$2"
    },

    { "src": "/(.*)", "dest": "dist/client/index.html" }
  ]
}
